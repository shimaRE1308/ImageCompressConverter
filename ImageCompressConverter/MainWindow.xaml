<Window x:Class="ImageCompressConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageCompressConverter"
        mc:Ignorable="d"
        Title="MainWindow" Height="170" Width="500" ResizeMode="NoResize">
    <DockPanel Margin="0,0,0,10">
        <DockPanel LastChildFill="True" Margin="1,1,1,1" DockPanel.Dock="Top">
            <Label Width="100" Content="実行パス" />
            <TextBox Name="exePath" DockPanel.Dock="Right" Text="C:\Program Files\ImageMagick-6.9.2-Q16\convert" />
        </DockPanel>
        <DockPanel LastChildFill="True" Margin="1,1,1,1" DockPanel.Dock="Top">
            <Label Width="100" Content="変換対象フォルダ" />
            <TextBox Name="targetPath" DockPanel.Dock="Right" />
        </DockPanel>
        <DockPanel LastChildFill="True" Margin="1,1,1,1" DockPanel.Dock="Top">
            <Label Width="100" Content="変換先フォルダ" />
            <TextBox Name="destPath" DockPanel.Dock="Right" />
        </DockPanel>
        <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="5,3,0,0" >
            <Button Height="30" Width="140" Content="変換開始" Click="Button_Click"/>
        </StackPanel>
    </DockPanel >
</Window>
